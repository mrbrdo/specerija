<%- model_class = @fridge.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @fridge.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @fridge.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:capacity) %>:</strong></dt>
  <dd><%= @fridge.capacity %></dd>
</dl>

<h2>Items:</h2>
<%= render "fridge_items/item_list" %>

<%= link_to "New item",
            ["new", @fridge, "fridge_item"],
            :class => 'btn btn-primary' %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fridges_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fridge_path(@fridge), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fridge_path(@fridge),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
